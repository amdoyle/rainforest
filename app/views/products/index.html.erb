<%= link_to "Add New Product", "products/new" %>


<h1>Products</h1>

  <% @products.each do | product |  %>

    <ul>
      <%= link_to product.name, "products/#{product.id}" %>
      <li>
        <%= product.description %>
      </li>
      <li>
        <%= product.price_in_cents %>
      </li>
    </ul>
  <% end %>
